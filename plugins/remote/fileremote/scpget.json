{
    "opDesc": "SCP下载",
    "opType": "runner",
    "typeName": "BASIC",
    "riskName": "HIGH",
    "interpreter": "perl",
    "defaultProfile": null,
    "description": "基于SCP下载服务端文件到本地",
    "option": [{
            "opt": "addr",
            "name": "SCP地址",
            "help": "SCP文件地址, 例如: 192.168.0.222:22",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "remotedir",
            "name": "远程目录",
            "help": "本地目录，例如：/tmp/test.tgz",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "dir",
            "name": "本地目录",
            "help": "本地目录，例如：/tmp/test.tgz",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "user",
            "name": "登录用户",
            "help": "用户名, 如不需要, 留空",
            "type": "text",
            "required": "false",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "pass",
            "name": "登录密码",
            "help": "密码, 如不需要, 留空",
            "type": "password",
            "required": "false",
            "validate": "",
            "defaultValue": ""
        }
    ],
    "output": [{
        "opt": "filePath",
        "name": "文件路径",
        "help": "FTP下载保存的文件路径",
        "type": "filepath"
    }]
}
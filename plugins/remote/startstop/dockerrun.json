{
    "opDesc": "运行Docker镜像",
    "opType": "target",
    "typeName": "START_STOP",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": "docker-args",
    "description": "在远程OS上运行Docker镜像",
    "enabled": 1,
    "option": [{
            "opt": "name",
            "name": "容器名",
            "help": "容器名称",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${SYS_NAME}-${MODULE_NAME}"
        },
        {
            "opt": "image",
            "name": "镜像名",
            "help": "Docker的镜像名，默认保持与模块同名",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${MODULE_NAME}"
        },
        {
            "opt": "tagname",
            "name": "镜像名",
            "help": "Docker的镜像名，默认保持与模块同名",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${ENV_NAME}-${VERSION}"
        },
        {
            "opt": "ports",
            "name": "暴露端口",
            "help": "Docker的镜像暴露的端口，格式：操作系统端:容器端口,多个逗号分隔。如：3308:3306,8099:8080",
            "type": "text",
            "required": "false",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "network",
            "name": "网络名称",
            "help": "Docker的镜像绑定网络，如：neatlogic",
            "type": "text",
            "required": "false",
            "validate": "",
            "defaultValue": ""
        }
    ],
    "argument": {
        "name": "应用参数",
        "help": "Docker启动所需要的应用参数",
        "type": "text",
        "count": 0,
        "isConst": "false",
        "defaultValue": "",
        "required": "false",
        "validate": ""
    },
    "output": []
}
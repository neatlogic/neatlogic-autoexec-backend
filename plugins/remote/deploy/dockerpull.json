{
    "opDesc": "拉取Docker镜像",
    "opType": "remote",
    "typeName": "BUILD",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": "docker-args",
    "description": "拉取Docker镜像到当前主机",
    "enabled": 0,
    "option": [
        {
            "opt": "registry",
            "name": "镜像仓库",
            "help": "镜像仓库地址，例如：10.0.1.13:8080",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "project",
            "name": "Docker工程名",
            "help": "Docker的project名称，默认保持与应用同名",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${SYS_NAME}"
        },
        {
            "opt": "image",
            "name": "镜像名",
            "help": "Docker的镜像名，默认保持与模块同名",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${MODULE_NAME}"
        },
        {
            "opt": "tagname",
            "name": "镜像名",
            "help": "Docker的镜像名，默认保持与模块同名",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${ENV_NAME}-${VERSION}"
        },
        {
            "opt": "user",
            "name": "仓库用户",
            "help": "Docker的镜像仓库登录用户名",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${global:docker.reg.user}"
        },
        {
            "opt": "password",
            "name": "仓库密码",
            "help": "Docker的镜像仓库登录用户密码",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${global:docker.reg.password}"
        }
    ],
    "output": []
}
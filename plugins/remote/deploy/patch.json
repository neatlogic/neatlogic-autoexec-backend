{
    "opDesc": "更新应用（补丁）",
    "opType": "remote",
    "typeName": "BUILD",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": "backup-args",
    "description": "更新应用补丁到目标应用",
    "enabled": 0,
    "option": [
        {
            "opt": "verbose",
            "name": "显示明细",
            "help": "执行日志显示详细信息",
            "type": "radio",
            "isConst": "false",
            "defaultValue": [
                {
                    "text": "是",
                    "value": "1",
                    "selected": "true"
                },
                {
                    "text": "否",
                    "value": "0"
                }
            ],
            "required": "true",
            "validate": ""
        },
        {
            "opt": "ins",
            "name": "实例名",
            "help": "实例名称",
            "type": "text",
            "isConst": "false",
            "defaultValue": "$INS_NAME",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "version",
            "name": "版本",
            "help": "版本号",
            "type": "text",
            "isConst": "false",
            "defaultValue": "$VERSION",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "backupcount",
            "name": "保留备份数",
            "help": "保留的最少备份数量",
            "type": "text",
            "isConst": "false",
            "defaultValue": "3",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "backuplastdays",
            "name": "保留备份天数",
            "help": "保留备份的最少天数",
            "type": "text",
            "isConst": "false",
            "defaultValue": "30",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "backupdir",
            "name": "保存备份目录",
            "help": "保存备份的目录，例如：/app/backup",
            "type": "text",
            "isConst": "false",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "versrcpath",
            "name": "版本物料路径",
            "help": "版本物料路径，例如：/tmp/test.war",
            "type": "text",
            "isConst": "false",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "targetdir",
            "name": "应用目录",
            "help": "版本物料更新到的目录目录，例如：/app/myapp",
            "type": "text",
            "isConst": "false",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        }
    ],
    "output": []
}
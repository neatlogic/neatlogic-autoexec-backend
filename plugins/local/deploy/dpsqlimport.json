{
    "opDesc": "SQL发布检查并导入",
    "opType": "local",
    "typeName": "DEPLOY",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": "sqlexec-args",
    "description": "自动发布SQL文件检查并导入",
    "enabled": 1,
    "option": [
        {
            "opt": "verbose",
            "name": "显示明细",
            "help": "执行日志显示详细信息",
            "type": "radio",
            "required": "true",
            "validate": "",
            "defaultValue": "1",
            "dataSource": [
                {
                    "text": "是",
                    "value": "1"
                },
                {
                    "text": "否",
                    "value": "0"
                }
            ]
        },
        {
            "opt": "targetphase",
            "name": "目标阶段",
            "help": "SQL导入的目标执行阶段",
            "type": "phase",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "rollback",
            "name": "回退",
            "help": "检入回退用的SQL脚本",
            "type": "radio",
            "required": "true",
            "validate": "",
            "defaultValue": "0",
            "dataSource": [
                {
                    "text": "是",
                    "value": "1"
                },
                {
                    "text": "否",
                    "value": "0"
                }
            ]
        },
        {
            "opt": "extnames",
            "name": "SQL扩展名",
            "help": "SQL文件的扩展名, 默认: sql,exp,imp,prc,pck,pkg,pkgh,pkgb",
            "type": "text",
            "required": "false",
            "validate": "",
            "defaultValue": "${global:sql.extnames}"
        },
        {
            "opt": "filter",
            "name": "目录过滤",
            "help": "只检入文件名匹配filter的文件，例如：after或before（留空，检入所有）",
            "type": "text",
            "required": "",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "index",
            "name": "SQL顺序文件",
            "help": "SQL文件执行顺序索引文件名或Pattern（留空，按照文件名顺序执行）",
            "type": "text",
            "required": "false",
            "validate": "",
            "defaultValue": ""
        }
    ],
    "output": []
}
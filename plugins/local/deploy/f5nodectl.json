{
    "opDesc": "A10 POOL节点控制",
    "opType": "localremote",
    "typeName": "DEPLOY",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": "F5-args",
    "description": "Disable或Enable负载均衡F5 POOL的节点",
    "enabled": 0,
    "option": [
        {
            "opt": "verbose",
            "name": "显示明细",
            "help": "执行日志显示详细信息",
            "type": "radio",
            "required": "true",
            "validate": "",
            "defaultValue": "1",
            "dataSource": [
                {
                    "text": "是",
                    "value": "1"
                },
                {
                    "text": "否",
                    "value": "0"
                }
            ]
        },
        {
            "opt": "baseurl",
            "name": "接口URL",
            "help": "F5接口URL地址，例如：https://10.16.185.1",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "username",
            "name": "用户名",
            "help": "访问仓库的用户名",
            "type": "text",
            "required": "false",
            "validate": "",
            "defaultValue": "${global:git.user}"
        },
        {
            "opt": "password",
            "name": "密码",
            "help": "访问仓库的密码",
            "type": "password",
            "required": "false",
            "validate": "",
            "defaultValue": "${global:git.password}"
        },
        {
            "opt": "pool",
            "name": "POOL名称",
            "help": "A10目标POOL名称",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "action",
            "name": "操作",
            "help": "操作（enable｜disable）",
            "type": "select",
            "required": "true",
            "validate": "",
            "defaultValue": "disable",
            "dataSource": [
                {
                    "text": "Disable",
                    "value": "disable"
                },
                {
                    "text": "enable",
                    "value": "enable"
                }
            ]
        },
        {
            "opt": "waitdisconnected",
            "name": "等待连接断开",
            "help": "执行节点disable后，等待分配到该节点的所有connection断开",
            "type": "radio",
            "required": "true",
            "validate": "",
            "defaultValue": "1",
            "dataSource": [
                {
                    "text": "是",
                    "value": "1"
                },
                {
                    "text": "否",
                    "value": "0"
                }
            ]
        },
        {
            "opt": "timeout",
            "name": "超时",
            "help": "调用超时时间（秒）",
            "type": "text",
            "required": "false",
            "validate": "",
            "defaultValue": "15"
        }
    ],
    "output": []
}
{
    "opDesc": "Appollo配置控制",
    "opType": "runner",
    "typeName": "DEPLOY",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": "apollo-args",
    "description": "Appolo配置控制",
    "enabled": 0,
    "option": [
        {
            "opt": "verbose",
            "name": "显示明细",
            "help": "执行日志显示详细信息",
            "type": "radio",
            "required": "true",
            "validate": "",
            "dataSource": {
                "dataList": [
                    {
                        "text": "是",
                        "value": "1"
                    },
                    {
                        "text": "否",
                        "value": "0"
                    }
                ]
            },
            "defaultValue": "1"
        },
        {
            "opt": "baseurl",
            "name": "接口URL",
            "help": "Appollo接口URL地址，例如：https://10.16.185.1",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${global:apollo.url}"
        },
        {
            "opt": "token",
            "name": "验证令牌",
            "help": "访问Appolo接口的访问令牌",
            "type": "password",
            "required": "true",
            "validate": "",
            "defaultValue": "${global:apollo.token}"
        },
        {
            "opt": "env",
            "name": "Apollo环境名",
            "help": "要操控的Apollo环境名",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "$ENV_NAME"
        },
        {
            "opt": "appid",
            "name": "Apollo应用ID",
            "help": "应用在Apollo中的ID",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "cluster",
            "name": "Apollo Cluster名",
            "help": "Appolo Cluster名称",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "namespace",
            "name": "Apollo NameSpace名",
            "help": "Appolo NameSpace名称",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "operator",
            "name": "操作人",
            "help": "更新操作的Appolo用户（用于记录操作历史）",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        }
    ],
    "output": []
}
{
    "opDesc": "获取增量代码",
    "opType": "runner",
    "typeName": "BUILD",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": "git-args",
    "description": "使用代码仓库的diff功能获取增量代码（需要在verget后才能使用）",
    "enabled": 0,
    "option": [{
            "opt": "verbose",
            "name": "显示明细",
            "help": "执行日志显示详细信息",
            "type": "select",
            "required": "true",
            "validate": "",
            "dataSource": {
                "dataList": [{
                        "text": "是",
                        "value": "1"
                    },
                    {
                        "text": "否",
                        "value": "0"
                    }
                ]
            },
            "defaultValue": "1"
        },
        {
            "opt": "diffsavedir",
            "name": "增量保存目录",
            "help": "抽取的增量代码保存的子目录（工程内的相对目录）",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "master"
        },
        {
            "opt": "excludedirs",
            "name": "排除目录",
            "help": "增量抽取排除的子目录，逗号相隔（工程内的相对目录）",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${VERSION}"
        },
        {
            "opt": "basetag",
            "name": "基线标签",
            "help": "diff比较的基线标签名或者SVN的标签子目录",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "baseline"
        },
        {
            "opt": "baserev",
            "name": "比较Revision",
            "help": "diff比较的Revision号",
            "type": "text",
            "required": "false",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "user",
            "name": "用户名",
            "help": "访问仓库的用户名(如GIT使用ssh方式，留空)",
            "type": "text",
            "required": "false",
            "validate": "",
            "defaultValue": "${global:git.user}"
        },
        {
            "opt": "password",
            "name": "密码",
            "help": "访问仓库的密码(如GIT使用ssh方式，留空)",
            "type": "password",
            "required": "false",
            "validate": "",
            "defaultValue": "${global:git.password}"
        }
    ],
    "output": []
}
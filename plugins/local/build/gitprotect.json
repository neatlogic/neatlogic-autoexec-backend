{
    "opDesc": "GIT保护设置",
    "opType": "runner",
    "typeName": "BUILD",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": "git-args",
    "description": "设置或删除GIT的保护策略",
    "enabled": 0,
    "option": [{
            "opt": "verbose",
            "name": "显示明细",
            "help": "执行日志显示详细信息",
            "type": "select",
            "required": "true",
            "validate": "",
            "dataSource": {
                "dataList": [{
                        "text": "是",
                        "value": "1"
                    },
                    {
                        "text": "否",
                        "value": "0"
                    }
                ]
            },
            "defaultValue": "1"
        },
        {
            "opt": "baseurl",
            "name": "API根URL",
            "help": "GitLab的RestFul api的根，例如：https://gitlab.example.com/api/v4",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${global:git.api.token}"
        },
        {
            "opt": "user",
            "name": "用户名",
            "help": "访问仓库的用户名",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${global:git.user}"
        },
        {
            "opt": "token",
            "name": "验证令牌",
            "help": "访问API的Token",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${global:git.api.token}"
        },
        {
            "opt": "object",
            "name": "保护类型",
            "help": "保护策略保护的类型",
            "type": "select",
            "required": "true",
            "validate": "",
            "dataSource": {
                "dataList": [{
                        "text": "tags",
                        "value": "tags"
                    },
                    {
                        "text": "branches",
                        "value": "branches"
                    }
                ]
            },
            "defaultValue": "tags"
        },
        {
            "opt": "pattern",
            "name": "保护目标",
            "help": "保护目标名称或名称的Pattern",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        },
        {
            "opt": "action",
            "name": "动作",
            "help": "动作（增加或删除保护）",
            "type": "select",
            "required": "true",
            "validate": "",
            "dataSource": {
                "dataList": [{
                        "text": "添加",
                        "value": "add"
                    },
                    {
                        "text": "删除",
                        "value": "delete"
                    }
                ]
            },
            "defaultValue": "add"
        }
    ],
    "output": []
}
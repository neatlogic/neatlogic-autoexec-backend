{
    "opDesc": "打版本标签",
    "opType": "runner",
    "typeName": "BUILD",
    "riskName": "LOW",
    "interpreter": "perl",
    "description": "对于基于标签的版本，自动打标签（需要在verget后才能使用）",
    "enabled": 0,
    "option": [
        {
            "opt": "verbose",
            "name": "显示明细",
            "help": "执行日志显示详细信息",
            "type": "select",
            "isConst": "false",
            "defaultValue": [
                {
                    "text": "是",
                    "value": "1",
                    "selected": "true"
                },
                {
                    "text": "否",
                    "value": "0"
                }
            ],
            "required": "true",
            "validate": ""
        },
        {
            "opt": "tagprefix",
            "name": "仓库地址",
            "help": "GIT的仓库地址或SVN仓库的根路径",
            "type": "text",
            "isConst": "false",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "username",
            "name": "用户名",
            "help": "访问仓库的用户名",
            "type": "text",
            "isConst": "false",
            "defaultValue": "${global:git.user}",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "password",
            "name": "密码",
            "help": "访问仓库的密码",
            "type": "text",
            "isConst": "false",
            "defaultValue": "${global:git.password}",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "branch",
            "name": "版本分支",
            "help": "GIT的版本分支或SVN的版本子目录",
            "type": "text",
            "isConst": "false",
            "defaultValue": "${VERSION}",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "tagsdir",
            "name": "SVN标签目录",
            "help": "只有SVN需要配置，SVN存放标签的仓库子目录",
            "type": "text",
            "isConst": "false",
            "defaultValue": "tags",
            "required": "true",
            "validate": ""
        }
    ],
    "output": []
}
{
    "opDesc": "拉取代码",
    "opType": "runner",
    "typeName": "BUILD",
    "riskName": "LOW",
    "interpreter": "perl",
    "description": "拉取GIT/SVN代码",
    "enabled": 0,
    "option": [
        {
            "opt": "verbose",
            "name": "显示明细",
            "help": "执行日志显示详细信息",
            "type": "select",
            "isConst": "false",
            "defaultValue": [
                {
                    "text": "是",
                    "value": "1",
                    "selected": "true"
                },
                {
                    "text": "否",
                    "value": "0"
                }
            ],
            "required": "true",
            "validate": ""
        },
        {
            "opt": "lang",
            "name": "语言",
            "help": "工程代码的语言和编码",
            "type": "select",
            "isConst": "false",
            "defaultValue": [
                {
                    "text": "en_US.UTF-8",
                    "value": "en_US.UTF-8",
                    "selected": "true"
                },
                {
                    "text": "en_US.GB18030",
                    "value": "en_US.GB18030"
                }
            ],
            "required": "true",
            "validate": ""
        },
        {
            "opt": "repotype",
            "name": "仓库类型",
            "help": "代码仓库的类型",
            "type": "select",
            "isConst": "false",
            "defaultValue": [
                {
                    "text": "GIT",
                    "value": "GIT",
                    "selected": "true"
                },
                {
                    "text": "SVN",
                    "value": "SVN"
                }
            ],
            "required": "true",
            "validate": ""
        },
        {
            "opt": "repo",
            "name": "仓库地址",
            "help": "GIT的仓库地址或SVN仓库的根路径",
            "type": "text",
            "isConst": "false",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "username",
            "name": "用户名",
            "help": "访问仓库的用户名",
            "type": "text",
            "isConst": "false",
            "defaultValue": "${global:git.user}",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "password",
            "name": "密码",
            "help": "访问仓库的密码",
            "type": "text",
            "isConst": "false",
            "defaultValue": "${global:git.password}",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "trunk",
            "name": "主干",
            "help": "GIT的主干分支或SVN的主干子目录",
            "type": "text",
            "isConst": "false",
            "defaultValue": "master",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "branch",
            "name": "版本分支",
            "help": "GIT的版本分支或SVN的版本子目录",
            "type": "text",
            "isConst": "false",
            "defaultValue": "${VERSION}",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "tag",
            "name": "标签",
            "help": "GIT的版本标签或SVN的版本标签子目录，如配置了tag则会优先使用tag获取代码",
            "type": "text",
            "isConst": "false",
            "defaultValue": "V${VERSION}",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "tagsdir",
            "name": "SVN标签目录",
            "help": "只有SVN需要配置，SVN存放标签的仓库子目录",
            "type": "text",
            "isConst": "false",
            "defaultValue": "tags",
            "required": "true",
            "validate": ""
        }
    ],
    "output": []
}
{
    "opDesc": "生成版本制品",
    "opType": "runner",
    "typeName": "BUILD",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": "git-args",
    "description": "从编译目录中抽取文件生成版本制品",
    "enabled": 0,
    "option": [
        {
            "opt": "verbose",
            "name": "显示明细",
            "help": "执行日志显示详细信息",
            "type": "radio",
            "required": "true",
            "validate": "",
            "dataSource": {
                "dataList": [
                    {
                        "text": "是",
                        "value": "1"
                    },
                    {
                        "text": "否",
                        "value": "0"
                    }
                ]
            },
            "defaultValue": "1"
        },
        {
            "opt": "user",
            "name": "用户名",
            "help": "访问仓库的用户名",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "${global:git.user}"
        },
        {
            "opt": "password",
            "name": "密码",
            "help": "访问仓库的密码",
            "type": "password",
            "required": "true",
            "validate": "",
            "defaultValue": "${global:git.password}"
        },
        {
            "opt": "dbdir",
            "name": "DB目录",
            "help": "存放数据库SQL脚本的子目录（相对于工程目录的相对目录，留空代表：db）",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "db"
        },
        {
            "opt": "docdir",
            "name": "DOC目录",
            "help": "存放文档的子目录（相对于工程目录的相对目录，留空代表：doc）",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": "doc"
        },
        {
            "opt": "exp",
            "name": "排除目录",
            "help": "排除子目录，逗号相隔，不对这些子目录进行同步",
            "type": "text",
            "required": "true",
            "validate": "",
            "defaultValue": ""
        }
    ],
    "argument": {
        "name": "抽取列表",
        "help": "不声明则为自动抽取，从工程目录中抽取的文件或目录，例如：target/*.war或者target/*.war:webapp/",
        "type": "text",
        "count": 0,
        "isConst": "false",
        "defaultValue": "target/*.war",
        "required": "false",
        "validate": ""
    },
    "output": []
}
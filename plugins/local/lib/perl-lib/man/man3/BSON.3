.SH "SYNOPSIS"
.IX Header "SYNOPSIS"
.Vb 3
\&    use BSON;
\&    use BSON::Types \*(Aq:all\*(Aq;
\&    use boolean;
\&
\&    my $codec = BSON\->new;
\&
\&    my $document = {
\&        _id             => bson_oid(),

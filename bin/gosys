#!/bin/bash
GOSYS_DIR=$(dirname $(which gosys))
AUTOEXEC_DIR=$(
    cd $GOSYS_DIR/..
    pwd
)
DEPLOY_PATH=$1
DEPLOY_ID_PATH=$1
DEPLOY_DATA_PATH="$AUTOEXEC_DIR/data/verdata/$DEPLOY_ID_PATH"

if [ -e "$DEPLOY_DATA_PATH" ]; then
    cd "$DEPLOY_DATA_PATH"
else
    DEPLOY_DATA_PATH=$(echo $1 | perl -e 's/\/[^\/]+$//')
    if [ -e "$DEPLOY_DATA_PATH" ]; then
        cd "$DEPLOY_DATA_PATH"
    else
        echo "ERROR: Directory $DEPLOY_DATA_PATH not exists."
    fi
fi

export DEPLOY_PATH
export DEPLOY_ID_PATH
export DEPLOY_DATA_PATH

unset GOSYS_DIR
unset AUTOEXEC_DIR

exec bash
